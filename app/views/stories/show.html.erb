<div class="page-header well well-sm">
  <%= link_to stories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-hand-left"></span>
    &nbsp;Back
  <% end %>
  <%= link_to edit_story_path(@story), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    &nbsp;Edit
  <% end %>
  <%= link_to @story, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-trash"></span>
    &nbsp;Delete
  <% end %>
  <h1>Story Comments</h1>
</div>

<dl class="jumbotron dl-horizontal">
  <h3>
    <dt>Title:</dt>
    <dd><%= link_to @story.title, @story.url_link %></dd>

    <dt>Url link:</dt>
    <dd><%= link_to @story.url_link, @story.url_link %></dd>

    <dt>Email:</dt>
    <dd><%= @story.created_by.email %></dd>
  </h3>
  <div class="row">
    <%= image_tag(@story.image_url(:small)) %>
    <a href="#" class="btn btn-default btn-lg active" role="button">Original</a>
    <a href="#" class="btn btn-default btn-lg active" role="button">Large</a>
    <a href="#" class="btn btn-default btn-lg active" role="button">Medium</a>
    <a href="#" class="btn btn-default btn-lg active" role="button">Small</a>

  </div>

</dl>

<h3>Comments</h3>
  <% @story.comments.each do |comment| %>
    <p>
      <strong><%= comment.created_by.name %>: </strong>
      <%= comment.body %>
    </p>
  <% end %>

<h3>Add a comment:</h3>
  <%= form_for([@story, @story.comments.build]) do |f| %>
    <p>
      <%= f.label :body %><br>
      <%= f.text_field :body, class: "form-control" %>
    </p>
    <p>
      <%= f.submit class: "btn btn-inverse"%>
    </p>
  <% end %>

<%= image_tag(@story.image_url(:original)) %>
<%= image_tag(@story.image_url(:large)) %>
<%= image_tag(@story.image_url(:medium)) %>
<%= image_tag(@story.image_url(:small)) %>
<%= image_tag(@story.image_url(:thumbnail)) %>
